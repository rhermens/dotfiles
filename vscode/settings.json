{
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [
        120,
        80
    ],
    "emmet.triggerExpansionOnTab": true,
    "[python]": {},
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.formatOnSave": false,
        "files.trimTrailingWhitespace": false,
        "files.insertFinalNewline": false
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "explorer.confirmDelete": false,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "remote.SSH.remotePlatform": {
        "wordpress": "linux",
        "wp": "linux"
    },
    "java.semanticHighlighting.enabled": true,
    "php.executablePath": "/usr/bin/php",
    "tabnine.experimentalAutoImports": true,
    "files.insertFinalNewline": true,
    "emmet.excludeLanguages": [
        "markdown"
    ],
    "emmet.includeLanguages": {
        "html": "html"
    },
    "java.refactor.renameFromFileExplorer": "autoApply",
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/mnt/db6ba5b6-1162-43f3-9723-3d32b9e38b0a/home/roy/.vscode/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "[shellscript]": {
        "editor.formatOnSave": false,
    },
    "java.project.importOnFirstTimeStartup": "automatic",
    "redhat.telemetry.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "window.titleBarStyle": "custom",
    "editor.fontFamily": "'Hack', 'Droid Sans Mono', 'Hack', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 13,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "python.languageServer": "Default",
    "vetur.format.options.tabSize": 4,
    "editor.lineNumbers": "relative",
    "workbench.startupEditor": "none",
    "editor.inlineSuggest.enabled": true,
    "terminal.integrated.fontFamily": "\"NotoSansMono Nerd Font\"",
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": false,
        "markdown": false
    },

    "vim.useCtrlKeys": true,
    "vim.easymotion": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
        // Tabs
        {
            "before": ["<tab>"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["<S-tab>"],
            "commands": ["workbench.action.previousEditor"]
        },

        // CoC binds
        {
            "before": ["[", "g"],
            "commands": ["editor.action.marker.prev"]
        },
        {
            "before": ["]", "g"],
            "commands": ["editor.action.marker.next"]
        },
        {
            "before": ["<S-k>"],
            "commands": ["editor.action.showHover"]
        },
    ],
    "vim.vimrc.enable": true,
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.linux": "/home/roy/.vimrc",
}
